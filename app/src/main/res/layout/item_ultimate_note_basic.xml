<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/cardNoteItemS"
    android:minHeight="57dp"
    style="@style/NoteCardAppearance"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="3dp"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="11dp"
        android:paddingEnd="3dp"
        android:layout_gravity="center"
        android:paddingBottom="11dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="1dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/noteTitleS"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noteDateS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="5dp"
                android:text="" />

            <ImageView
                android:id="@+id/noteImageExtraS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="5dp"
                android:src="@drawable/ic_baseline_add_24" />

            <ImageView
                android:id="@+id/noteImageTypeS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="9dp"
                android:src="@drawable/ic_baseline_check_box_24"
                />

        </LinearLayout>

        <include
            android:id="@+id/alarmViewBs"
            layout="@layout/view_alarm_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>