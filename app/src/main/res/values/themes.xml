<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme.
    Theme.AppCompat.Light.NoActionBar
    Theme.MaterialComponents.DayNight.NoActionBar
    -->
    <style name="Theme.NoteX" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorPrimaryDark">@color/white</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowLightStatusBar">true</item>
        
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionModeBackground">@color/actionBar_color</item>
        <item name="actionModeCopyDrawable">@color/black</item>
    </style>

    <style name="PopUpActivityTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="checkNoteItemStyle">
        <item name="android:foreground">@drawable/checknote_item_drawable</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
    </style>

    <style name="NoteCardAppearance">
        <item name="android:foreground">@drawable/border_black_selected_3dp</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>

    <style name="button_red" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#F12E2E</item>
    </style>
    <style name="button_green" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#079125</item>
    </style>
    <style name="button_default" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">#6200EE</item>
    </style>
    <style name="button_backup" >
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/default_background_color</item>
        <item name="backgroundTint">#9A0E46</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!--        <item name="bottomSheetStyle">@style/AppModalStyle</item>-->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CardAppearance1">
        <item name="android:foreground">@drawable/selectable_custom_item_background_7dp_07wd</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardBackgroundColor">@color/color_select_state_only</item>
        <item name="cardElevation">0.1dp</item>
    </style>

    <style name="CardAppearance2">
        <item name="android:foreground">@drawable/selectable_custom_item_background_7dp_07wd</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="cardBackgroundColor">@color/default_color</item>
        <item name="cardElevation">0.7dp</item>

    </style>

</resources>